<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".Main"
    android:orientation="vertical"
    android:background="@drawable/back7">


    <LinearLayout android:layout_width="match_parent"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bartlogo"/>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_gravity="center"
            android:prompt="@string/promptSource"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_gravity="center"
            android:prompt="@string/promptDestination"
            android:layout_marginTop="15dp"/>

    <!-- Calculate button -->
    <Button
        android:layout_width="170dp"
        android:layout_height="35dp"
        android:text="Calculate"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawable="@drawable/button"
        style="@style/button"
        android:textColor="#000AAA"
        />

    <!-- Following text is for displaying fare -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2"
        android:text=""
        android:layout_gravity="center_horizontal"
        android:textSize="40dp"
        android:textColor="#FFF"
        android:layout_marginTop="30dp"
        />

    </LinearLayout>

</LinearLayout>
